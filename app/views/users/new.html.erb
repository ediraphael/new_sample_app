<h1>Inscription</h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :nom %><br />
		<%= f.text_field :nom %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password, "Mot de passe" %><br />
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation, "Confirmation" %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="field">
		<%= f.label :poid, "Poid" %><br />
		<%= f.text_field :poid %>
	</div>
	<div class="field">
		<%= f.label :poidIdeal, "Poid Ideal" %><br />
		<%= f.text_field :poidIdeal %>
	</div>
	<div class="actions">
		<%= f.submit "Inscription" %>
	</div>
<% end %>